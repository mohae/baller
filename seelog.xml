<seelog>
    <outputs formatid="std:fast">
	<filter levels="info, error, warn, critical">
	        <file path="application.log" formatid="std:debug-short"/>
	</filter>
	<filter levels="error, warn, critical" formatid="stderr">
		<console />
	</filter>
	<filter levels="info" formatid="stdinfo">
		<console />
	</filter>
	<filter levels="debug, trace" formatid="stddetailed">
		<console />
	</filter>
    </outputs>
    <formats> 
        <format id = "detailed" format= "%Date %Time [%Level] %RelFile-%FuncShort:%Line: %Msg%n" /> 
        <format id = "stdinfo" format = "%Date %Time %EscM(32)[%Level]%EscM(39) %Msg%EscM(0)\n" /> 
	<format id = "stderr" format= "%Date %Time %EscM(31)[%Level]%EscM(39) %EscM(31)%RelFile-%FuncShort(%Line):%EscM(39) %Msg%EscM(0)\n" />
	<format id = "stddetailed" format= "%Date %Time %EscM(33)[%Level]%EscM(39) %EscM(33)%RelFile-%FuncShort(%Line):%EscM(39) %Msg%EscM(0)\n" />
    </formats> 
</seelog>
